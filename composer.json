{
  "name": "swow-cloud/swow-admin",
  "type": "project",
  "keywords": [
    "php",
    "swow",
    "admin"
  ],
  "description": "swow-admin",
  "license": "MIT",
  "require": {
    "php": ">=8.1",
    "hyperf/cache": "3.0.*",
    "hyperf/command": "3.0.*",
    "hyperf/config": "3.0.*",
    "hyperf/constants": "3.0.*",
    "hyperf/contract": "3.0.*",
    "hyperf/db-connection": "3.0.*",
    "hyperf/di": "3.0.*",
    "hyperf/dispatcher": "3.0.*",
    "hyperf/engine-swow": "^2.1",
    "hyperf/event": "3.0.*",
    "hyperf/exception-handler": "3.0.*",
    "hyperf/framework": "3.0.*",
    "hyperf/guzzle": "3.0.*",
    "hyperf/http-server": "3.0.*",
    "hyperf/logger": "3.0.*",
    "hyperf/phar": "3.0.*",
    "hyperf/process": "3.0.*",
    "hyperf/redis": "^3.0",
    "hyperf/signal": "^3.0",
    "hyperf/utils": "3.0.*",
    "swow-cloud/debugger": "^0.1.0",
    "ext-redis": "*",
    "ext-posix": "*"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.0",
    "hyperf/devtool": "3.0.*",
    "hyperf/testing": "3.0.*",
    "mockery/mockery": "^1.0",
    "phpstan/phpstan": "^1.0",
    "symfony/var-dumper": "^6.2"
  },
  "suggest": {
    "ext-openssl": "Required to use HTTPS.",
    "ext-json": "Required to use JSON.",
    "ext-pdo": "Required to use MySQL Client.",
    "ext-pdo_mysql": "Required to use MySQL Client."
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Api\\": "api/",
      "CloudAdmin\\": "cloud-admin/"
    },
    "files": [
      "cloud-admin/Utils/functions.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "HyperfTest\\": "test/"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "extra": [],
  "scripts": {
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-autoload-dump": [
      "@php -r \"if(PHP_OS_FAMILY === 'Windows') shell_exec('del /f /s /q runtime\\container && rmdir runtime\\container'); else shell_exec('rm -rf runtime/container');\" "
    ],
    "analyse": "@php vendor/bin/phpstan analyse --memory-limit 512M -l 0 -c phpstan.neon ./app ./config",
    "cs-fix": "@php vendor/bin/php-cs-fixer fix $1",
    "start": "@php bin/hyperf.php start",
    "test": "@php -e vendor/bin/phpunit -c phpunit.xml --colors=always",
    "rector": "rector process --clear-cache"
  }
}
